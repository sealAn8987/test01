/* components/index/renmenItem/remmenItem.wxss */
.remen_item{
  padding: 26rpx 28rpx 40rpx 0;
  border-bottom: 1rpx solid rgba(231,231,231,1);
}
.title_box{
  display: flex;
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 34rpx;
}
.title{
  flex: 1;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 36rpx;
  color: #161616;
}
.title_box image{
  display: block;
  width: 70rpx;
  height: 60rpx;
}
.main_content{
  display: flex;
  height: 140rpx;
}
.main_tu{
  width: 140rpx;
  height: 140rpx;
  margin-right: 26rpx;
  position: relative;
}
.main_tu .tu{
  display: block;
  width: 140rpx;
  height: 140rpx;
}
.main_tu .icon{
  display: block;
  position: absolute;
  top: -12rpx;
  right: -12rpx;
  width: 34rpx;
  height: 34rpx;
}
.main_right{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.desc{
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #383838;
}
.canshu{
  font-size: 20rpx;
  color: #383838;
}