/* pages/recommend/recommend.wxss */
page{
  width: 100%;
  height: 100%;
  background: #F3F7F8;
}
.recommend{
  width: 100%;
  height: 178rpx;
  display: flex;
  padding: 38rpx 0 0rpx 30rpx;
  background: #fff;
}
.pix image{
  width: 82rpx;
  height: 82rpx;
  border-radius:50%;
  border: 1rpx solid blue; 
  margin-right: 24rpx;
}
.content{
  width: 50%;

  }
  .content view:first-child{
    font-size: 28rpx;
    color: #161616;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .content_list{
     margin-top:9rpx; 
    display: flex;
    justify-content: space-between;
     flex-wrap: wrap;
  }
  .content_list text{
    text-align: center;
    padding: 0 6rpx;
    margin-bottom: 30rpx; 
    display: inline-block;
    font-size: 20rpx;
    color: #1FAAB4;
    border: 0.1rpx solid #E7F6F7; 
  }
  .date{
      color: #ABABAB;
      font-size: 22rpx;
  }
  .pay{
    margin-left: 20rpx;
  }
  .num{
    font-size: 28rpx;
    color: #333333;
  }
  .al_pay{
    margin-top:9rpx; 
    text-align: left;    
    font-size: 20rpx;
  }
  .al_pay2{
    display: inline-block;
    line-height: 20rpx;
    padding: 6rpx 6rpx;
    color: #1FAAB4;
    border: 0.1rpx solid #E7F6F7; 
  }
  .baseline{
    width: 100%;
    height: 20rpx;
  background: #F3F7F8;
  }
