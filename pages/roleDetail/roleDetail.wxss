/* pages/roleDetail/roleDetail.wxss */

.roleDetail {
  background: rgba(243, 247, 248, 1);
  padding-bottom: 102rpx;

}
.detail-box {
  background: #fff;
  padding: 40rpx 28rpx 40rpx;
}
.roleDetail .tit {
  font-size: 38rpx;
  font-weight: 400;
  color: rgba(22, 22, 22, 1);
  line-height: 53rpx;
}

.roleDetail video {
  width: 100%;
  margin-top: 40rpx;
}

.text text {
  display: block;
  width: 100%;
  font-size: 28rpx;
  font-weight: 300;
  color: rgba(19, 19, 19, 1);
  line-height: 59rpx;
  margin-top: 46rpx;
}

.otherCard {
  background: #fff;
  margin-top: 20rpx;
  padding: 42rpx 30rpx 45rpx;
}

.otherCard .tit {
  font-size: 36rpx;
  font-weight: 400;
  color: rgba(22, 22, 22, 1);
  padding-bottom: 30rpx;
  height: 60rpx;
}

.otherCard .tit .t-name {
  margin-top: 5rpx;
}

.otherCard .tit  .addBtn {
  display: inline-block;
  padding: 0;
  width: 70rpx;
  line-height: 50rpx;
  height: 60rpx;
  background: rgba(42, 192, 203, 1);
  border-radius: 6rpx;
  color: #fff;
  font-size: 60rpx;
  float: right;
}

.otherCard .o-info .o-icon {
  width: 140rpx;
  display: inline-block;
  min-height: 140rpx;
  background: #ccc;
  border-radius: 8rpx;
  overflow: hidden;
}

.otherCard .o-info .o-icon image {
  width: 100%;
  height: 100%;
}

.otherCard .o-info .o-txt {
  width: 550rpx;
  display: inline-block;
  padding-left: 26rpx;
  box-sizing: border-box;
  vertical-align: top;
}

.otherCard .o-info .o-txt .txt {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(56, 56, 56, 1);
  line-height: 40rpx;
  display: inline-block;
  vertical-align: top;
}

.otherCard .o-info .o-txt .o-b {
  font-size: 20rpx;
  color: rgba(56, 56, 56, 1);
  margin-top: 37rpx;
  line-height: 28rpx;
}

.otherCard .o-info .o-txt .o-b .label {
  width: 90rpx;
  height: 30rpx;
  font-size: 18rpx;
  line-height: 30rpx;
  background: rgba(231, 246, 247, 1);
  padding: 0 9rpx;
  color: rgba(31, 170, 180, 1);
  margin-left: 28rpx;
  display: inline-block;
}

.otherCard .o-info .o-txt .o-b .label image {
  width: 15rpx;
  height: 15rpx;
  display: inline-block;
  margin-right: 8rpx;
  vertical-align: middle;
}

.teacherBox {
  padding: 42rpx 30rpx 40rpx;
  margin-top: 20rpx;
  background: #fff;
}
.teacherBox .tit {
  font-size: 34rpx;
  color: rgba(22, 22, 22, 1);
  line-height: 48rpx;
}

.teacherBox .t-info {
  margin-top: 42rpx;
}

.teacherBox .t-info .t-icon {
  width: 120rpx;
  height: 120rpx;
  background: rgba(217, 217, 217, 1);
  border-radius: 50%;
  display: inline-block;
}

.teacherBox .t-info .t-msg {
  padding-left: 26rpx;
  display: inline-block;
  vertical-align: top;
}

.teacherBox .t-info .t-msg text {
  display: block;
}

.teacherBox .t-info .t-msg .t-i-t {
  font-size: 28rpx;
  color: rgba(22, 22, 22, 1);
  line-height: 40rpx;
  margin-top: 24rpx;
}

.teacherBox .t-info .t-msg .t-i-b {
  font-size: 22rpx;
  color: rgba(171, 171, 171, 1);
  line-height: 30rpx;
  margin-top: 3rpx;
}

.teacherBox .t-js {
  margin-top: 27rpx;
  font-size: 28rpx;
  color: rgba(77, 77, 77, 1);
  line-height: 50rpx;
}

.teacherBox .t-js image {
  width: 222rpx;
  height: 228rpx;
  display: inline-block;
  margin-right: 12rpx;
}

.teacherBox .t-js image:nth-of-type(3n+0) {
  margin-right: 0;
}

.talk-box {
  text-align: right;
}

.talk-box .msg {
  font-size: 26rpx;
  color: rgba(164, 164, 164, 1);
  line-height: 37rpx;
}

.talk-box button {
  background: none;
  box-shadow: none;
  display: inline-block;
  border: none;
  font-size: 24rpx;
  color: rgba(178, 178, 178, 1);
  line-height: 33rpx;
  padding: 0;
  margin-left: 56rpx;
}

.talk-box button:after {
  display: none;
}

.talk-box button image {
  margin-right: 16rpx;
}

.talk-box .scBtn image {
  width: 34rpx;
  vertical-align: middle;
  display: inline-block;
}

.talk-box .talkBtn image {
  width: 36rpx;
  vertical-align: middle;
  display: inline-block;
}

.pageFooter {
  height: 98rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  text-align: right;
  padding: 0 30rpx;
  border-top: 2rpx solid #d8d8d8;
}

.pageFooter button {
  background: none;
  border: none;
  box-shadow: none;
  display: inline-block;
  padding: 0;
  margin-left: 56rpx;
  color: #b2b2b2;
  line-height: 98rpx;
}

.pageFooter button:after {
  display: none;
}

.pageFooter button image {
  margin-right: 16rpx;
}

.pageFooter .scBtn image {
  width: 36rpx;
  vertical-align: middle;
  display: inline-block;
}

.pageFooter .talkBtn image {
  width: 36rpx;
  vertical-align: middle;
  display: inline-block;
}

.habit {
  padding: 0 28rpx;
}

.habit .h-tit {
}

.habit .h-tit > view {
  display: inline-block;
}

.friendList{
  margin-top: 20rpx;
}