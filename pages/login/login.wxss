/* pages/login.wxss */

.login {
  background: #333333;
  height: 100vh;
  padding-top: 100rpx;
}

.login .box {
  width: 639rpx;
  height: 757rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 0 55rpx 0;
  padding: 49rpx 40rpx 0;
  box-sizing: border-box;
}

.login .box .tit {
  font-size: 48rpx;
  line-height: 0.67rpx;
  color: rgba(6, 6, 6, 1);
}

.login .box .close {
  width: 38rpx;
  margin-top: 12rpx;
  height: 38rpx;
}

.login .box .close image {
  width: 100%;
  height: 100%;
  display: block;
}

.form {
  margin-top: 49rpx;
  padding: 0 9rpx;
}

.form .item {
  padding: 46rpx 0;
  box-sizing: border-box;
  height: 140rpx;
  border-bottom: 1px solid rgba(232, 232, 232, 1);
  position: relative;
}

.form .item image {
  vertical-align: top;
  display: inline-block;
  margin-top: 8rpx;
  margin-right: 29rpx;
  margin-left: 18rpx;
}

.form .item .p-icon {
  width: 30rpx;
  height: 40rpx;
}

.form .item .s-icon {
  width: 35rpx;
  height: 40rpx;
  margin-right: 25rpx;
}

.form .item input {
  display: inline-block;
  width: 450rpx;
  line-height: 45rpx;
}

.pl {
  font-size: 32rpx;
  color: rgba(202, 202, 208, 1);
}

.sendCode {
  width: 150rpx;
  display: inline-block;
  line-height: 45rpx;
  font-size: 26rpx;
  color: rgba(32, 169, 178, 1);
  background: none;
  border: none;
  padding: 0;
  box-shadow: none;
  position: absolute;
  right: 15rpx;
  top: 50rpx;
}

.sendCode:after {
  display: none;
}

.loginBtn {
    margin-top: 110rpx;
  width: 559rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: rgba(138, 210, 215, 1);
  border-radius: 48rpx;
  color: #fff;
  font-size: 30rpx;
}
