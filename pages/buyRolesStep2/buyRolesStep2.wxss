/* pages/buyRoles/buyRoles.wxss */

.buyRoles {
  min-height: 100vh;
  background: rgba(247, 249, 251, 1);
  padding: 40rpx 36rpx 126rpx;
}

.buyRoles .tabs {
    padding-bottom: 40rpx;

}
.checkBtn{
  font-size:28rpx;
font-weight:400;
color:rgba(42,192,203,1);
line-height:40rpx;
position:fixed;
right:30rpx;
top: 1.4rem;
padding: 0;
background: none;
}
.checkBtn:after{
  display: none;
}
.buyRoles .tabs button {
  display: inline-block;
  padding: 11rpx 29rpx;
  line-height: 42rpx;
  background: #fff;
  border-radius: 32rpx;
  color: #9b9b9b;
  font-size: 30rpx;
  margin-right: 34rpx;
  vertical-align: top;
}

.buyRoles .tabs button.active {
  background: rgba(95, 211, 219, 1);
  color: #343433;
}

.buyRoles .tabs button:after {
  display: none;
}

.roleList {
}

.roleList .r-card {
  width: 206rpx;
  height: 206rpx;
  border-radius: 8rpx;
  position: relative;
  display: inline-block;
  margin-right: 30rpx;
  margin-bottom: 32rpx;
}

.roleList .r-card:nth-of-type(3n+0) {
  margin-right: 0;
}

.roleList .r-card>image {
  width: 100%;
  height: 100%;
}

.roleList .r-card  .name {
  font-size: 32rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 45rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  margin-top: -22.5rpx;
  text-align: center;
}

.roleList .r-card .label {
  width: 72rpx;
  line-height: 35rpx;
  background: linear-gradient(-180deg, rgba(255, 205, 150, 1) 0%, rgba(254, 159, 93, 1) 100%);
  border-radius: 8rpx 0 18rpx 0;
  position: absolute;
  color: #fff;
  font-size: 22rpx;
  text-align: center;
  left: 0;
  top: 0;
  box-sizing: border-box;
}

.roleList .r-card .check {
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}

.roleList .r-card .check image {
  width: 100%;
  display: block;
  height: 100%;
}

.sqBox {
  width: 678rpx;
  min-height: 100rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  margin-top: 12rpx;
}

.sqBox .tit {
  line-height: 42rpx;
  font-size: 30rpx;
  padding: 28rpx 44rpx;
  border-bottom: 1rpx solid rgba(235, 235, 235, 1);
}

.sqBox  .list {
}

.sqBox  .list .card {
  height: 180rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid rgba(238, 238, 238, 1);
  padding: 25rpx 29rpx 0;
}

.sqBox  .list .card:nth-last-of-type(1) {
  border-bottom: none;
}

.sqBox  .list .card .icon {
  width: 130rpx;
  vertical-align: top;
  display: inline-block;
}

.sqBox  .list .card .icon image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  display: block;
}

.sqBox  .list .card .info {
  width: 490rpx;
  display: inline-block;
  vertical-align: top;
  padding-left: 29rpx;
  box-sizing: border-box;
}

.sqBox  .list .card .info .i-b {
  height: 33rpx;
}

.sqBox  .list .card .info  .i-label {
  font-size: 30rpx;
  font-weight: 400;
  color: rgba(52, 52, 51, 1);
  line-height: 42rpx;
  margin-top: 16rpx;
}

.sqBox  .list .card .info .i-b {
  margin-top: 16rpx;
}

.sqBox  .list .card .info .i-b .p-num, .sqBox  .list .card .info .i-b .k-num {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  line-height: 33rpx;
  display: inline-block;
  vertical-align: top;
}

.sqBox  .list .card .info image {
  width: 22rpx;
  height: 22rpx;
  display: inline-block;
  vertical-align: top;
  margin-top: 6rpx;
  margin-left: 10rpx;
  margin-right: 35rpx;
}

.scroll-x {
  white-space: nowrap;
  width: 622rpx;
}

.buyBtn {
  position: fixed;
  left: 36rpx;
  right: 36rpx;
  bottom: 30rpx;
  width: 678rpx;
  line-height: 96rpx;
  background: rgba(95, 211, 219, 1);
  border-radius: 4rpx;
  font-size: 36rpx;
  color: rgba(22, 22, 22, 1);
}
